<div class="sign_in_box">

  <h3 class="red_color">User Information</h3>

  <div>
    First Name: <%= @user.fname if @user.fname%>
  </div>
  <br/>

  <div>
    Last Name: <%= @user.lname if @user.lname%>
  </div>
  <br/>

  <div>
    Email: <%= @user.email if @user.email%>
  </div>
  <br/>

  <div>
    Company: <%= @user.company if @user.company%>
  </div>
  <br/>

  <div>
    Phone: <%= @user.phone if @user.phone%>
  </div>
  <br/>

  <div>
    Status :
    <% if @user.is_active == true%>
      Active
    <%elsif @user.is_active == false%>
      Inactive
    <%end%>
  </div>
  <br/>

  <%= link_to "Edit Profile", edit_admin_user_path(@user) %>
</div>